# 应用程序配置
NODE_ENV=development
PORT=3000

# 前端配置
FRONTEND_URL=http://localhost:3000
FRONTEND_DOMAIN=example.com

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/database
MONGODB_USERNAME=username
MONGODB_PASSWORD=password

# SMTP邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=465
SMTP_USER=noreply@example.com
SMTP_PASS=smtp_password
SMTP_FROM_NAME=平台名称
SMTP_FROM_EMAIL=noreply@example.com

# 安全配置
JWT_SECRET=generate_a_long_random_secret
ENCRYPTION_KEY=generate_another_long_random_secret

# 第三方服务
TENSORFLOW_MODEL_PATH=/path/to/models
SENTRY_DSN=https://your-sentry-dsn

# 邮件模板配置
EMAIL_TEMPLATE_VERIFY=verify_account
EMAIL_TEMPLATE_RESET_PASSWORD=reset_password
EMAIL_TEMPLATE_COURSE_REMINDER=course_reminder

# 监控和日志
LOG_LEVEL=info
ENABLE_PERFORMANCE_MONITORING=false
