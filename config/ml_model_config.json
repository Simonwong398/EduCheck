{
  "learning_rate": 0.001,
  "batch_size": 32,
  "epochs": 50,
  "feature_weights": {
    "amount": 0.3,
    "payment_method": 0.2,
    "device_type": 0.2,
    "geo_risk": 0.3
  },
  "risk_thresholds": {
    "very_low": [0, 0.25],
    "low": [0.25, 0.5],
    "medium": [0.5, 0.75],
    "high": [0.75, 1.0]
  },
  "regularization": {
    "l1_rate": 0.001,
    "l2_rate": 0.001
  },
  "data_augmentation": {
    "noise_factor": 0.05,
    "synthetic_data_ratio": 0.2
  }
}
